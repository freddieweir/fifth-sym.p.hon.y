[MASTER]
# Specify a score threshold to be exceeded before program exits with error.
fail-under=8.0

# Files or directories to be skipped.
ignore=.venv,venv,old-scripts,__pycache__,.git

# Add files or directories matching the regex patterns to the ignore list.
ignore-patterns=test_.*?\.py,conftest\.py

[MESSAGES CONTROL]
# Disable specific messages
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-few-public-methods,
    too-many-instance-attributes,
    too-many-public-methods,
    too-many-return-statements,
    too-many-lines,
    invalid-name,  # We already handle this with ruff
    line-too-long,  # We already handle this with ruff
    import-outside-toplevel,  # Allowed for conditional imports
    wrong-import-position,  # Allowed for conditional imports after sys.path modifications
    broad-exception-caught,  # Often necessary for robust error handling
    logging-fstring-interpolation,  # F-strings are more readable
    consider-using-f-string,
    unnecessary-lambda,
    global-statement,
    no-else-return,  # Sometimes else-return is clearer
    no-else-break,
    consider-using-in,
    attribute-defined-outside-init,  # GUI frameworks often require this
    unused-argument,  # GUI callbacks often have unused parameters
    unused-variable,  # Sometimes variables are kept for debugging
    unnecessary-pass,
    useless-return,
    subprocess-run-check,  # Not always needed for fire-and-forget commands
    duplicate-code,  # Some duplication is acceptable for clarity
    fixme

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=100

# Allow the body of a class to be on the same line as the declaration.
single-line-class-stmt=no

# Allow the body of an if to be on the same line as the test.
single-line-if-stmt=no

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,_,e,f,id,ok,qt,ui

# Argument names that match this expression will be ignored.
argument-rgx=[a-z_][a-z0-9_]{0,30}$

# Variable names that match this expression will be ignored.
variable-rgx=[a-z_][a-z0-9_]{0,30}$

[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of statements in function / method body
max-statements=60

# Maximum number of attributes for a class
max-attributes=10

# Minimum number of public methods for a class
min-public-methods=0

[IMPORTS]
# Allow wildcard imports from modules
allow-wildcard-with-all=yes

[TYPECHECK]
# List of members which are set dynamically and missed by pylint
generated-members=qt.*,Qt.*,QtCore.*,QtGui.*,QtWidgets.*,PySide6.*

# List of module names for which member attributes should not be checked
ignored-modules=PySide6,PySide6.QtCore,PySide6.QtGui,PySide6.QtWidgets

# List of classes names for which member attributes should not be checked
ignored-classes=QObject,QWidget,QMainWindow,QApplication

[LOGGING]
# Format style used to check logging format string.
logging-format-style=new